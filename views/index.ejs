<main>
    <h1>Welcome to CSE Motors!</h1>

    <section class="deloread-ad">
        <h2 class="blue-text"> DMC Delorean</h2>
        <ul>
            <li>3 Cup holders</li>
            <li>Superman doors</li>
            <li>Fuzzy dice!</li>
        </ul>
        <a href="#" class="btn">Own Today</a>
        <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean">
    </section>
    <section class="upgrades-reviews">
        <div class="delorean-upgrades">
            <h2>Delorean Upgrades</h2>
            <div class="upgrades-grid">
                <% upgrades.forEach(upgrade => { %>
                    <div class="upgrade-item">
                        <img src="<%= upgrade.image %>" alt="<%= upgrade.name %>">
                        <a href="#"><%= upgrade.name %></a>
                    </div>
                <% }) %>
            </div>
        </div>
        <div class="delorean-reviews">
            <h2>DMC Delorean Reviews</h2>
            <ul>
                <% reviews.forEach(review =>{%>
                    <li><%= review %></li>
                <% }) %>
            </ul>
        </div>
    </section>
</main>
