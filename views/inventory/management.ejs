<div class="management-container">
    <% if (messages.success) { %>
        <div class="alert alert-success"><%= messages.success %></div>
    <% } %> 
    <% if (messages.error) { %>
        <div class="alert alert-error"><%= messages.error %></div>
    <% } %>
  
    <h1>Vehicle Management</h1>
    <ul>
        <li><a href="/inv/add-classification" title= "Click to add a new vehicle classification"> Add New Classification</a></li>
        <li><a href="/inv/add-inventory" title="Click to add a new vehicle">Add New Vehicle</a></li>
    </ul>

    <h2> Manage Inventory </h2>
    <p>Choose a classification to see those inventory items.</p>
    <%- classificationSelect %>

    <table id="inventoryDisplay"></table>

    <noscript>JavaScript must be enabled to use this page.</noscript>

    <script src="../../js/inventory.js"></script>