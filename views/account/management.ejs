<h1 class="title"><%- title %></h1>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<div class="account-management">
  <h2>Welcome <%- locals.accountData.account_firstname %>!</h2>
  <p>You're logged in.</p>
  <a href="/account/update">Edit Account Information</a>

  <% if (
    locals.accountData.account_type === "Employee" ||
    locals.accountData.account_type === "Admin"
  ) { %>
    <h3>Inventory Management</h3>
    <a href="/inv/">Manage Inventory</a>
  <% } %>

  <% if (locals.accountData.account_type === "Admin") { %>
    <h3>Account Type Management</h3>
    <a href="/account/accounttype">Edit Accounts Type</a>

    <!-- Add Feedbacks link only for Admin -->
    <h3>Feedbacks Management</h3>
    <a href="/admin/feedbacks">View Feedbacks</a>
  <% } %>
</div>

