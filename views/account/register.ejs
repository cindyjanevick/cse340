
<h1 class="page-title"><%= title %></h1>

<%- messages() %>

<div class="form-container">
  <form action="/account/register" method="post" class="form">
    <label for="fname" class="form-label">First Name</label>
    <input type="text" name="account_firstname" id="fname" class="form-input" required value="<%= locals.account_firstname %>">

    <label for="lname" class="form-label">Last Name</label>
    <input type="text" name="account_lastname" id="lname" class="form-input" required value="<%= locals.account_lastname %>">

    <label for="email" class="form-label">Email Address</label>
    <input type="email" name="account_email" id="email" class="form-input" required placeholder="Enter a valid email address" value="<%= locals.account_email %>">

    <label for="registerPassword" class="form-label">Password</label>
    <input type="password" name="account_password" id="registerPassword" class="form-input" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

    <div class="password-requirements">
      <p>Password must meet the following criteria:</p>
      <ul>
        <li>At least 12 characters</li>
        <li>1 number</li>
        <li>1 lowercase letter</li>
        <li>1 uppercase letter</li>
        <li>1 special character</li>
      </ul>
    </div>

    <button type="submit" id="submitRegister" class="btn-submit">Submit</button>
  </form>
</div>
