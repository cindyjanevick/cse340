<h1>Customer Feedbacks</h1>
<% if (flash.success && flash.success.length > 0) { %>
    <div class="flash success"><%= flash.success %></div>
  <% } %>
  <% if (flash.error && flash.error.length > 0) { %>
    <div class="flash error"><%= flash.error %></div>
  <% } %>
  





<table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Message</th>
        <th>Date Submitted</th>
      </tr>
    </thead>
    <tbody>
        <% feedbacks.forEach(feedback => { %>
          <tr>
            <td><%= feedback.customer_name %></td>
            <td><%= feedback.email %></td>
            <td><%= feedback.message %></td>
            <td><%= feedback.created_at ? new Date(feedback.created_at).toLocaleString() : 'N/A' %></td>
            <td>
                <form action="/admin/feedbacks/delete/<%= feedback.feedback_id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                    <button type="submit" class="delete-btn">Delete</button>
                </form>
                
            </td>
          </tr>
        <% }) %>
      </tbody>
  </table>
