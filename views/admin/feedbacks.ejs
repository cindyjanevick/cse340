
<% if (flash.success && flash.success.length > 0) { %>
    <div class="flash success"><%= flash.success %></div>
  <% } %>
  <% if (flash.error && flash.error.length > 0) { %>
    <div class="flash error"><%= flash.error %></div>
  <% } %>
  
  <div class="feedback-page">
    <h1 class="feedback-heading">Customer Feedbacks</h1>
  
    <div class="feedback-container">
      <table class="feedback-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% feedbacks.forEach(feedback => { %>
            <tr>
              <td><%= feedback.customer_name %></td>
              <td><%= feedback.email %></td>
              <td><%= feedback.message %></td>
              <td><%= feedback.created_at ? new Date(feedback.created_at).toLocaleString() : 'N/A' %></td>
              <td>
                <form action="/admin/feedbacks/delete/<%= feedback.feedback_id %>" method="POST" onsubmit="return confirm('Delete this feedback?');">
                  <button type="submit" class="feedback-delete-btn">Delete</button>

                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  
